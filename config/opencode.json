{
  "$schema": "https://opencode.ai/config.json",
"agent": {
	"nextjsdev":{
		"permission":{
			"skill":{
				"internal-*":"allow"
			}
		}
}
},

"mcp": {
	  "Email-Sender":{
		  "type": "remote",
		  "url":"http://localhost:5678/mcp/email_sender",
		  "enabled": true
	  }
  },
  "model": "ollama/devstral-small-2:24b-cloud",
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (local)",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "devstral-small-2:24b-cloud": {
          "name": "devstral-small-2:24b-cloud",
          "tools": true,
          "reasoning": true
        }
      }
    }
  }
}
